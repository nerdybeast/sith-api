{
  "name": "sith-api",
  "version": "0.0.1",
  "description": "RESTful node.js service backing the SITH app.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nerdybeast/sith-api"
  },
  "main": "./dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "test": "npm run lint:ts & jest",
    "dev": "nodemon",
    "debug": "ts-node --inspect=5858 index.ts",
    "build": "tsc",
    "prod": "tsc && node dist/server.js",
    "postinstall": "npm run build",
    "lint:ts": "tsc & tslint ./src/**/*.ts"
  },
  "engines": {
    "node": "8.9.x",
    "npm": "5.5.x"
  },
  "dependencies": {
    "@nestjs/common": "^4.6.6",
    "@nestjs/core": "^4.6.6",
    "@nestjs/microservices": "^4.6.6",
    "@nestjs/testing": "^4.6.6",
    "@nestjs/websockets": "^4.6.6",
    "@types/node": "^8.10.10",
    "@types/socket.io": "^1.4.33",
    "body-parser": "^1.18.2",
    "camelcase-keys": "^4.2.0",
    "cors": "2.8.4",
    "debug": "^3.1.0",
    "got": "^8.3.0",
    "jsforce": "^1.8.4",
    "jsonapi-serializer": "^3.5.6",
    "jsonwebtoken": "^8.2.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.isequal": "^4.5.0",
    "lodash.mapkeys": "^4.6.0",
    "moment": "^2.22.0",
    "morgan": "^1.9.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rollbar": "^2.3.9",
    "rxjs": "^5.5.8",
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/camelcase-keys": "^4.0.0",
    "@types/cors": "^2.8.4",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.11.1",
    "@types/got": "^7.1.8",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/morgan": "^1.7.35",
    "@types/redis": "^2.8.6",
    "@types/supertest": "^2.0.4",
    "dotenv": "^5.0.1",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src/.*(test|spec)\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*"
    ]
  }
}
